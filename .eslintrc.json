{
  "env": {
    "browser": true,
    "es2022": true,
    "node": true
  },
  "plugins": ["@typescript-eslint", "import"],
  "extends": ["standard-with-typescript", "prettier"],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": 12,
    "project": "./lint.tsconfig.json"
  },
  "rules": {
    "import/order": "warn",
    "@typescript-eslint/strict-boolean-expressions": 0
  },
  "ignorePatterns": ["/public/"]
}
